@model IEnumerable<Makale_Entities.Not>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Kullanici.KullaniciAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Kategori.Baslik)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Baslik)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Taslak)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BegeniSayisi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KayitTarih)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DegistirmeTarihi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DegistirenKullanici)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Kullanici.KullaniciAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kategori.Baslik)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Baslik)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Taslak)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BegeniSayisi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KayitTarih)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DegistirmeTarihi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DegistirenKullanici)
            </td>
            <td>
            <td style="display:flex">
                <button class="btn btn-default btn-xs"
                        data-toggle="modal" data-target="#modal1" data-notid="@item.Id">
                    <span class="glyphicon glyphicon-comment text-danger"></span>Yorumlar
                </button>
                @BootstrapHelper.Linkbuton("/Not/Edit/" + item.Id, "warning", "btn-sm", "edit", "")
                @BootstrapHelper.Linkbuton("/Not/Details/" + item.Id, "info", "btn-sm", "search", "")
                @BootstrapHelper.Linkbuton("/Not/Delete/" + item.Id, "danger", "btn-sm", "trash", "")

            </td>

        </tr>
    }

</table>
@BootstrapHelper.ModalPopUp("modal1", "Yorumlar")
<script src="~/Scripts/ScriptYorumlar.js"></script>